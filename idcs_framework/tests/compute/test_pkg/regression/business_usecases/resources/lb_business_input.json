{
    "instanceTypeToBeCreated": "vm-spr-tny",
    "machineImageToBeUsed": "ubuntu-2204-jammy-v20240308",
    "lbMonitorType": ["tcp", "http", "https"],
    "vmInstancePayload": {
        "metadata": {
            "name": "<<instance-name>>"
          },
          "spec": {
            "availabilityZone": "<<availability-zone>>",
            "instanceType": "<<instance-type>>",
            "machineImage": "<<machine-image>>",
            "runStrategy": "RerunOnFailure",
            "sshPublicKeyNames": [
              "<<ssh-key-name>>"
            ],
